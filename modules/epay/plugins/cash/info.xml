<?xml version="1.0" encoding="UTF-8"?>
<plugin>
	<title xml:lang="ko">무통장입금</title>
	<description xml:lang="ko">계좌정보를 안내해 줄 수 있는 플러그인</description>
	<version>1.1</version>
	<date>2013-08-08</date>
	<author email_address="contact@nurigo.net" link="http://store.nurigo.net">
		<name xml:lang="ko">NURIGO</name>
	</author>
	<license link="">Commercial</license>

	<extra_vars>
		<group>
			<title xml:lang="ko">기본설정</title>
			<var name="account_title" type="text">
				<title xml:lang="ko">계좌이름</title>
				<description xml:lang="ko">미입력시 "무통장입금"으로 표시됩니다.</description>
			</var>
			<var name="bank_name" type="text">
				<title xml:lang="ko">은행명</title>
				<description xml:lang="ko">은행명을 입력하세요.</description>
			</var>
			<var name="account_number" type="text">
				<title xml:lang="ko">계좌번호</title>
				<description xml:lang="ko">계좌번호를 입력하세요.</description>
			</var>
			<var name="account_holder" type="text">
				<title xml:lang="ko">예금주</title>
				<description xml:lang="ko">예금주를 입력하세요.</description>
			</var>
			<var name="bank_name_x1" type="text">
				<title xml:lang="ko">은행명(추가1)</title>
				<description xml:lang="ko">은행명을 입력하세요.</description>
			</var>
			<var name="account_number_x1" type="text">
				<title xml:lang="ko">계좌번호(추가1)</title>
				<description xml:lang="ko">계좌번호를 입력하세요.</description>
			</var>
			<var name="account_holder_x1" type="text">
				<title xml:lang="ko">예금주(추가1)</title>
				<description xml:lang="ko">예금주를 입력하세요.</description>
			</var>
			<var name="bank_name_x2" type="text">
				<title xml:lang="ko">은행명(추가2)</title>
				<description xml:lang="ko">은행명을 입력하세요.</description>
			</var>
			<var name="account_number_x2" type="text">
				<title xml:lang="ko">계좌번호(추가2)</title>
				<description xml:lang="ko">계좌번호를 입력하세요.</description>
			</var>
			<var name="account_holder_x2" type="text">
				<title xml:lang="ko">예금주(추가2)</title>
				<description xml:lang="ko">예금주를 입력하세요.</description>
			</var>
			<var name="bank_name_x3" type="text">
				<title xml:lang="ko">은행명(추가3)</title>
				<description xml:lang="ko">은행명을 입력하세요.</description>
			</var>
			<var name="account_number_x3" type="text">
				<title xml:lang="ko">계좌번호(추가3)</title>
				<description xml:lang="ko">계좌번호를 입력하세요.</description>
			</var>
			<var name="account_holder_x3" type="text">
				<title xml:lang="ko">예금주(추가3)</title>
				<description xml:lang="ko">예금주를 입력하세요.</description>
			</var>
			<var name="bank_name_x4" type="text">
				<title xml:lang="ko">은행명(추가4)</title>
				<description xml:lang="ko">은행명을 입력하세요.</description>
			</var>
			<var name="account_number_x4" type="text">
				<title xml:lang="ko">계좌번호(추가4)</title>
				<description xml:lang="ko">계좌번호를 입력하세요.</description>
			</var>
			<var name="account_holder_x4" type="text">
				<title xml:lang="ko">예금주(추가4)</title>
				<description xml:lang="ko">예금주를 입력하세요.</description>
			</var>
			<var name="bank_name_x5" type="text">
				<title xml:lang="ko">은행명(추가5)</title>
				<description xml:lang="ko">은행명을 입력하세요.</description>
			</var>
			<var name="account_number_x5" type="text">
				<title xml:lang="ko">계좌번호(추가5)</title>
				<description xml:lang="ko">계좌번호를 입력하세요.</description>
			</var>
			<var name="account_holder_x5" type="text">
				<title xml:lang="ko">예금주(추가5)</title>
				<description xml:lang="ko">예금주를 입력하세요.</description>
			</var>
		</group>
		<group>
			<title xml:lang="ko">옵션</title>
			<var name="guide_text" type="text">
				<title xml:lang="ko">안내문구</title>
				<description xml:lang="ko">팝업창에 뜰 안내문구를 입력하세요.</description>
			</var>
			<var name="button_title" type="text">
				<title xml:lang="ko">버튼타이틀</title>
				<description xml:lang="ko">미입력시 "주문완료하기"로 표시됩니다.</description>
			</var>
			<var name="login_required" type="select">
				<title xml:lang="ko">로그인 여부</title>
				<description xml:lang="ko">로그인 후 결제가능여부를 선택하세요.</description>
				<options value="N">
					<title xml:lang="ko">로그인하지 않아도 결제가능</title>
				</options>
				<options value="Y">
					<title xml:lang="ko">로그인 후 결제 가능</title>
				</options>
			</var>
			<var name="decimals" type="text">
				<title xml:lang="ko">소수점 자리수</title>
				<description xml:lang="ko">입력된 가격을 소수점으로 처리할 자리수를 입력해 주세요. 달러의 경우 센트(cent)를 소수점 두자리로 표현하므로 2를 입력합니다.</description>
			</var>
		</group>
	</extra_vars>
</plugin>
