<filter name="insert_plugin" module="layout" act="procEpayAdminInsertPlugin" confirm_msg_code="confirm_submit">
    <form>
        <node target="plugin" required="true" />
        <node target="title" required="true" />
    </form>
    <parameter>
        <param name="plugin" target="plugin" />
        <param name="title" target="title" />
    </parameter>
    <response callback_func="completeInsertPlugin">
        <tag name="error" />
        <tag name="message" />
        <tag name="plugin_srl" />
    </response>
</filter>
