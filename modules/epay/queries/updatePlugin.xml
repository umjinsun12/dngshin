<query id="updatePlugin" action="update">
    <tables>
        <table name="epay_plugins" />
    </tables>
    <columns>
        <column name="title" var="title" />
        <column name="extra_vars" var="extra_vars" />
        <column name="plugin" var="plugin" />
    </columns>
    <conditions>
        <condition operation="equal" column="plugin_srl" var="plugin_srl" filter="number" notnull="notnull" />
    </conditions>
</query>
