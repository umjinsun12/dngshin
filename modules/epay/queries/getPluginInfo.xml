<query id="getPluginInfo" action="select">
    <tables>
        <table name="epay_plugins" />
    </tables>
    <columns>
        <column name="*" />
    </columns>
    <conditions>
		<condition operation="equal" column="plugin_srl" var="plugin_srl" notnull="notnull" />
    </conditions>
    <navigation>
        <index var="sort_index" default="plugin_srl" order="desc" />
    </navigation>
</query>
