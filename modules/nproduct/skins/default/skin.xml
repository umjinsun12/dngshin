<?xml version="1.0" encoding="UTF-8"?>
<skin version="0.2">
	<title xml:lang="ko">디지털 콘텐츠</title>
	<description xml:lang="ko">디지털 콘텐츠 판매 스킨입니다</description>
	<version>0.1</version>
	<date>2011-10-13</date>
	<link>http://www.nurigo.net</link>

	<author email_address="contact@nurigo.net" link="http://www.nurigo.net">
		<name xml:lang="ko">NURIGO</name>
	</author>

	<colorset>
		<color name="white">
			<title xml:lang="ko">하얀색(기본)</title>
		</color>
	</colorset>

	<extra_vars>
		<var name="thumbnail_width" type="text" default="140">
			<title xml:lang="ko">[상세페이지] 썸네일 가로크기</title>
			<description xml:lang="ko">
				썸네일 가로크기를 px 단위를 빼고 입력하세요, 기본 140
			</description>
		</var>
		<var name="thumbnail_height" type="text" default="140">
			<title xml:lang="ko">[상세페이지] 썸네일 세로크기</title>
			<description xml:lang="ko">
				썸네일 세로크기를 px 단위를 빼고 입력하세요, 기본 140
			</description>
		</var>
                <var name="thumbnail_type" type="select" default="ratio">
                        <title xml:lang="ko">[상세페이지] 썸네일 생성 방법</title>
                        <description xml:lang="ko">썸네일 생성 방법을 선택할 수 있습니다.</description>
                        <options value="ratio">
                                <title xml:lang="ko">비율 맞추기</title>
                        </options>
                        <options value="crop">
                                <title xml:lang="ko">꽉 채우기</title>
                        </options>
                </var>

		<var name="list_thumbnail_width" type="text">
			<title xml:lang="ko">[목록] 썸네일 가로크기</title>
			<description xml:lang="ko">
				썸네일 가로크기를 px 단위를 빼고 입력하세요, 기본 80
			</description>
		</var>
		<var name="list_thumbnail_height" type="text">
			<title xml:lang="ko">[목록] 썸네일 세로크기</title>
			<description xml:lang="ko">
				썸네일 세로크기를 px 단위를 빼고 입력하세요, 기본 80
			</description>
		</var>
                <var name="list_thumbnail_type" type="select" default="ratio">
                        <title xml:lang="ko">[목록] 썸네일 생성 방법</title>
                        <description xml:lang="ko">썸네일 생성 방법을 선택할 수 있습니다.</description>
                        <options value="ratio">
                                <title xml:lang="ko">비율 맞추기</title>
                        </options>
                        <options value="crop">
                                <title xml:lang="ko">꽉 채우기</title>
                        </options>
                </var>

                <var name="list_style" type="select" default="list">
                        <title xml:lang="ko">상품목록 출력형식</title>
                        <description />
                        <options value="list">
                                <title xml:lang="ko">리스트</title>
                        </options>
                        <options value="grid">
                                <title xml:lang="ko">그리드</title>
                        </options>
                </var>
	</extra_vars>
</skin>
