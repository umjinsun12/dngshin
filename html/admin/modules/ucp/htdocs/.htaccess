SetEnv HTACCESS on

<Files ~ "file">
        ForceType application/x-httpd-php
</Files>

<FilesMatch "\..*$">
	Deny from all
</FilesMatch>

# Now allow /index.php as well as the various assets
#
<FilesMatch "(^$|index\.php|\.(gif|GIF|jpg|jpeg|png|css|js|swf|txt|ico|ttf|svg|eot|woff|wav|mp3|aac|ogg|webm|less)$)">
	Allow from all
</FilesMatch>
